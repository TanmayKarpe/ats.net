@model Ats.Net.Web.Services.Instrument
@{
    ViewData["Title"] = Model?.Name + " - ATS KBCNMU";
}

<div class="py-12 bg-muted/30">
    <div class="container mx-auto px-4 md:px-6">
        <nav class="flex mb-4 text-sm">
            <a href="/" class="text-primary hover:underline">Home</a>
            <span class="mx-2">/</span>
            <a href="/instruments" class="text-primary hover:underline">Instruments</a>
            <span class="mx-2">/</span>
            <span class="text-muted-foreground">@Model?.Name</span>
        </nav>
        <h1 class="text-4xl md:text-5xl font-bold mb-4">@Model?.Name</h1>
        @if (!string.IsNullOrEmpty(Model?.Category))
        {
            <p class="text-xl text-muted-foreground">@Model.Category</p>
        }
    </div>
</div>

<div class="py-16 bg-background">
    <div class="container mx-auto px-4 md:px-6 max-w-4xl">
        @if (Model != null)
        {
            <!-- Image Section -->
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-12 rounded-lg overflow-hidden">
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="w-full h-96 object-cover">
                </div>
            }

            <!-- Description -->
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="mb-12">
                    <h2 class="text-2xl font-bold mb-4">About</h2>
                    <p class="text-muted-foreground leading-relaxed">@Model.Description</p>
                </div>
            }

            <!-- Specifications -->
            @if (Model.Specifications != null && Model.Specifications.Any())
            {
                <div class="mb-12">
                    <h2 class="text-2xl font-bold mb-6">Specifications</h2>
                    <div class="space-y-3">
                        @foreach (var spec in Model.Specifications)
                        {
                            <div class="flex items-start gap-3 rounded-lg border bg-card p-4">
                                <i data-lucide="check-circle" class="text-primary shrink-0 mt-0.5" style="width: 20px; height: 20px;"></i>
                                <span class="text-sm">@spec</span>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Applications -->
            @if (Model.Applications != null && Model.Applications.Any())
            {
                <div class="mb-12">
                    <h2 class="text-2xl font-bold mb-6">Applications</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        @foreach (var application in Model.Applications)
                        {
                            <div class="flex items-start gap-3 rounded-lg border bg-muted/50 p-4">
                                <i data-lucide="flask-conical" class="text-primary shrink-0 mt-0.5" style="width: 20px; height: 20px;"></i>
                                <span class="text-sm">@application</span>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Contact for Booking -->
            <div class="rounded-lg border bg-muted/50 p-6">
                <h3 class="text-lg font-semibold mb-4">Book this Instrument</h3>
                <p class="text-sm text-muted-foreground mb-4">
                    Interested in using this instrument for your research? Contact us to schedule a session or get more information about pricing and availability.
                </p>
                <a href="/contact" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
                    Contact Us
                </a>
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <p class="text-muted-foreground">Instrument not found.</p>
                <a href="/instruments" class="text-primary hover:underline mt-4 inline-block">‚Üê Back to Instruments</a>
            </div>
        }
    </div>
</div>
