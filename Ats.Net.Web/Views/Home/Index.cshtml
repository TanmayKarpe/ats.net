<script src="https://unpkg.com/lucide@latest"></script>
<script>
    (function () {
        if (window.lucide) {
            window.lucide.createIcons();
        }

        const modal = document.getElementById('news-modal');
        const titleEl = document.getElementById('news-modal-title');
        const detailEl = document.getElementById('news-modal-detail');
        const instrumentEl = document.getElementById('news-modal-instrument');
        const badgeEl = document.getElementById('news-modal-badge');
        const closeButtons = modal ? modal.querySelectorAll('[data-close-modal]') : [];

        document.querySelectorAll('[data-update-id]').forEach((btn) => {
            btn.addEventListener('click', () => {
                if (!modal || !titleEl || !detailEl || !instrumentEl || !badgeEl) return;
                const label = btn.getAttribute('data-update-badge-label') || '';
                const color = btn.getAttribute('data-update-badge-color') || '';
                const text = btn.getAttribute('data-update-badge-text') || '';
                badgeEl.className = `px-3 py-1.5 rounded-full text-xs font-semibold flex items-center gap-2 ${color} ${text}`;
                badgeEl.textContent = label;
                titleEl.textContent = btn.getAttribute('data-update-title') || '';
                instrumentEl.textContent = btn.getAttribute('data-update-instrument') || '';
                detailEl.textContent = btn.getAttribute('data-update-detail') || '';
                modal.classList.remove('hidden');
                modal.classList.add('flex');
            });
        });

        closeButtons.forEach((btn) => {
            btn.addEventListener('click', () => {
                modal?.classList.add('hidden');
                modal?.classList.remove('flex');
            });
        });

        modal?.addEventListener('click', (ev) => {
            if (ev.target === modal) {
                modal.classList.add('hidden');
                modal.classList.remove('flex');
            }
        });
    })();
</script>

